<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|top"
    android:padding="32dp"
    android:background="@drawable/backgroundimg">

    <TextView
        android:id="@+id/textViewCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="Create account"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"/>

    <TextView
        android:id="@+id/textViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Register"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginBottom="32dp" />

    <!--allow input from user -> email, password, confirm password-->

    <EditText
        android:id="@+id/registerUsernameEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#B3FFFFFF"
        android:drawableStart="@android:drawable/ic_dialog_email"
        android:drawablePadding="8dp"
        android:hint="Enter email"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3FFFFFF"
        android:textSize="16sp" />

    <!--password requirements listed-->
    <TextView
        android:id="@+id/textViewPasswordRequirements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password must:\n• Be at least 8 characters long\n• Include an uppercase letter\n• Include a lowercase letter\n• Include a number\n• Include a special character"
        android:textSize="12sp"
        android:textColor="#B3FFFFFF"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/registerPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3FFFFFF"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#B3FFFFFF"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:drawablePadding="8dp"
        android:drawableStart="@android:drawable/ic_lock_lock" />



    <EditText
        android:id="@+id/ConfirmRegisterPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3FFFFFF"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#B3FFFFFF"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:drawablePadding="15dp"
        android:drawableStart="@android:drawable/ic_secure"/>

    <!--button -> registers user-->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#0886F5"
        android:elevation="4dp"
        android:fontFamily="sans-serif-medium"
        android:stateListAnimator="@null"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!--button -> directs user to login screen-->
    <Button
        android:id="@+id/goToLoginButton"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="Already have an account? Login"
        android:backgroundTint="#03DAC6"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        android:elevation="2dp"/>

</LinearLayout>
