<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/backgroundimg"
    android:padding="24dp">

    <!--all hardcoded for now-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Rewards"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/rewardsContainer"
        android:layout_width="177dp"
        android:layout_height="136dp"
        android:background="@drawable/trophy"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/trophy"
            android:contentDescription="Trophy icon"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Earn rewards by staying within your budget and tracking your expenses!"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:layout_marginBottom="24dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!--medal image -> represents budget master-->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="Badge Example"
            android:layout_marginEnd="16dp"
            android:src="@drawable/medal" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget Master"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stay under budget for 3 months"
                android:textSize="14sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!--star image -> represents expense tracker-->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="Consistency Badge"
            android:layout_marginEnd="16dp"
            android:src="@drawable/star" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expense Tracker"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track expenses for 30 consecutive days"
                android:textSize="14sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
